\ProvidesPackage{resume}

%------------------------
% Basic setup and imports
%------------------------
\RequirePackage[empty]{fullpage}                % Page margins.
\usepackage[
    left=0.5in,
    right=0.5in,
    top=0.5in,
    bottom=0.5in]{geometry}                     % Page margins (explicit for more control).
\RequirePackage{titlesec}                       % Title formatting.
\RequirePackage{fancyhdr}                       % Custom header and footer.
\RequirePackage[english]{babel}                 % Language.
\RequirePackage{graphicx}                       % Images.
\RequirePackage{tabularx}                       % Tables.
\RequirePackage{multirow}                       % Multirow cells in tables.
\RequirePackage{siunitx}                        % SI units and unit formatting.
\RequirePackage{verbatim}                       % Comments.
\RequirePackage{enumitem}                       % Lists.
\RequirePackage[hidelinks]{hyperref}            % Clickable links.
\RequirePackage{marvosym}                       % Symbols.
\RequirePackage{latexsym}                       % Special symbols.
\RequirePackage[usenames, dvipsnames]{color}    % Custom colors.
\RequirePackage[dvipsnames]{xcolor}             % Custom colors.
\RequirePackage{contour}                        % Custom underline.
\RequirePackage[normalem]{ulem}                 % Custom underline.
\RequirePackage[T1]{fontenc}                    % Font encoding.
\RequirePackage{fontspec}                       % Quick font switching with LuaLaTeX etc.
\RequirePackage[sfdefault]{FiraSans}          	% Overwrites current sans-serif font.
\RequirePackage[scale=0.90, lf]{FiraMono}       % FiraMono mono-spaced font.
\RequirePackage{microtype}                      % Improved spacing between words and letters.
\RequirePackage{ragged2e}                       % Justify text.

% ------------------------
% SI units setup
% ------------------------
\sisetup{per-mode=symbol}
\sisetup{detect-all}
\DeclareSIUnit{\sieuro}{\mbox{\euro}}  % Euro sign for SI units. Could be replaced with other currency symbols.
\DeclareSIUnit{\plus}{\mbox{+}}  % Plus sign for SI units.
\DeclareRobustCommand{\ebseries}{\fontseries{eb}\selectfont}
\DeclareTextFontCommand{\texteb}{\ebseries}

% ------------------------
% Only for `pdflatex`
% ------------------------
% For PDFLaTeX only, to ensure ATS parsability; LuaLaTeX preferred!
% \input{glyphtounicode}
% \pdfgentounicode=1

% ------------------------
% Visual customizations
% ------------------------
% Favorite color, see https://de.overleaf.com/learn/latex/Using_colors_in_LaTeX:
\definecolor{resumeColor}{RGB}{0, 70, 148}
\newcommand{\favColor}{resumeColor}

% Custom header and footer:
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}

\urlstyle{same}  % URL style.

% Turn the bullet points into tiny bullets instead of the default dashes:
\renewcommand\labelitemii{\(\vcenter{\hbox{\tiny\(\bullet\)}}\)}

% No indentation:
\raggedbottom
\raggedright
\setlength{\tabcolsep}{0in}

% Sans-serif sections (specifically for the section titles, i.e., Education, Experience, etc.):
\titleformat{\section}{
    \bfseries
    \color{\favColor}
    \Large
}{}{0em}{}[
    {
            \color{\favColor}
            \titlerule[2pt]
        }
    \vspace{-6pt}
]

% ------------------------
% Custom commands
% ------------------------
% Section, e.g., Education, Experience, etc.:
\newcommand{\resumeSubheading}[4]{
    \item
    \begin{tabular*}{\textwidth}[t]{l@{\extracolsep{\fill}}r}
        \textbf{\small #1} & {\small #2}\vspace{-2pt}\\  % Company/university name and dates.
        {\small #3} & {\small #4}\\  % Job/degree title and location.
    \end{tabular*}\vspace{-8pt}
}

\newcommand{\resumeProjectHeading}[2]{
    \item
    \begin{tabular*}{\textwidth}{l@{\extracolsep{\fill}}r}
        \small\textbf{#1} & {\small #2} \\
    \end{tabular*}\vspace{-8pt}
}

\newcommand{\resumeItem}[1]{
    \item\small{
        {#1}  % Item content with reduced vertical spacing.
    }
    \vspace{-2pt}
}

\newcommand{\resumeItemListEnd}{\end{itemize}}
\newcommand{\resumeItemListStart}{\begin{itemize}[leftmargin=*]}

\newcommand{\resumeSubHeadingListStart}{\begin{itemize}[leftmargin=0in, label={}]}
        \newcommand{\resumeSubHeadingListEnd}{\end{itemize}}
